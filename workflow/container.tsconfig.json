{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "allowJs": true,
      "outDir": "./dist",
      "rootDir": "."
    },
    "include": ["./**/*"],
    "exclude": ["node_modules"]
  }